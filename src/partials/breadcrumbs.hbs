<nav aria-label="breadcrumb">
  {{#if page.breadcrumbs}}
  <ol class="breadcrumb">
    {{#with page.componentVersion}}
    {{#if (and ./title (not (or ./root (eq @root.page.breadcrumbs.0.content ./title))))}}
     <li class="breadcrumb-item"><a href="{{{relativize @root.page.url ./url}}}">{{{./title}}}</a></li>
    {{/if}}
    {{/with}}

    {{#each page.breadcrumbs}}
    {{#if @last}}
    <li class="breadcrumb-item active" aria-current="page">{{{./content}}}</li>
    {{else}}
    <li class="breadcrumb-item">
    {{~#if (and ./url (eq ./urlType 'internal'))~}}
    <a href="{{{relativize @root.page.url ./url}}}">{{{./content}}}</a>
    {{~else~}}
    {{{./content}}}
    {{~/if~}}
    {{/if}}
    </li>
    {{/each}}
  </ol>
  {{/if}}
</nav>